<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="@dimen/normalspacing"
    android:layout_height="wrap_content"
    android:id="@+id/singleBookLL"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/normalspacing"
    android:background="@drawable/rectangle"
    android:backgroundTint="#F1F6FD"
    >

    <ImageView
        android:id="@+id/bookIV"
        android:src="@drawable/ic_google"
        android:layout_width="90dp"
        android:layout_height="90dp"

        />

    <LinearLayout
        android:paddingStart="@dimen/normalspacing"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bookNameTV"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purple Hoodie"
                />




        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/smallspacing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView

                android:id="@+id/discountPriceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Rs 2000"
                android:textColor="@color/primaryColor"
                android:textSize="14sp" />



            <TextView
                android:id="@+id/oldPriceTV"
                android:text="Author name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="13sp" />


        </LinearLayout>

        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/addToCartLL"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Cart"

                />

            <ImageView
                android:id="@+id/removeWishlistIV"
                android:rotation="40"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/rectangle"
                android:src="@drawable/ic_round_add_24"
                app:tint="@color/white" />

            <ProgressBar
                android:id="@+id/addingCartPR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/normalspacing"
                android:visibility="gone" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>