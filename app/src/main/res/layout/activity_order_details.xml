<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".orders.orderDetails.OrderDetailsActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarThumbVertical="@null">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/backIv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/borderbox_shape"
                android:padding="4dp"
                android:src="@drawable/ic_back_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:gravity="start"
                android:text="Order Details"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp">

            <TextView
                android:id="@+id/orderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#1"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Pending"
                android:textColor="@color/primaryColor"
                android:textSize="17dp" />

            <!--                <TextView-->
            <!--                    android:id="@+id/restaurantName"-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:layout_below="@+id/status"-->
            <!--                    android:layout_marginTop="17dp"-->
            <!--                    android:text="restaurant"-->
            <!--                    android:textColor="@color/black"-->
            <!--                    android:textSize="17dp" />-->

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/orderId"
                android:layout_marginTop="15dp"
                android:text="Date:"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/orderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:layout_marginTop="15dp"
                android:text="2022-03-30"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/orderDate"
                android:layout_marginTop="15dp"
                android:text="Payment Method: "
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/payStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/payment"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:text="Cash On Delivery"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/payStatus"
                android:layout_marginTop="15dp"
                android:text="Delivered to: "
                android:textColor="@color/black"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/delivery"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/phoneNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/orderDate"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:text="105"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/delivery_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/orderDate"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:text="Bagar"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/street"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/payStatus"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:text="Simpani"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15dp" />


            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ced4da" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cartIV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/cartIV">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ced4da" />
            </LinearLayout>

            <TextView
                android:id="@+id/shipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cartIV"
                android:layout_marginTop="25dp"
                android:text="Delivery Charge:"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cartIV"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"
                android:text="Rs. 50"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shipping"
                android:layout_marginTop="15dp"
                android:text="Total:"
                android:textColor="@color/primaryColor"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/totalTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shipping"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:text="Rs. 800"
                android:textColor="@color/primaryColor"
                android:textSize="17dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/totalTV">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ced4da" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/total"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="150dp"
                android:text="Payment Status:"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/paymentStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/total"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"
                android:text="Unpaid"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/paymentStatus1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/total"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:text="Paid"
                android:textColor="@color/primaryColor"
                android:textSize="17dp"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>


</ScrollView>



</LinearLayout>